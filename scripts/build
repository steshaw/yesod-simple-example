#!/usr/bin/env bash

set -euxo pipefail

echo "bash version = $(bash --version)"

function broken() {
#  touch .static.files
  touch Settings/StaticFiles.hs
  stack build "$@"
}

function working() {
  ./scripts/gen-static-files
  stack build "$@"
}

type=$1; shift

case $type in
  working)
    working "$@"
    ;;
  broken)
    broken "$@"
    ;;
esac
